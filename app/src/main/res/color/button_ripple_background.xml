<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:color="@color/primaryLightColor">
        <shape>
            <solid
                android:color="@color/secondaryLightColor" />
            <stroke
                android:width="1dp"
                android:color="@color/secondaryColor" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:color="@color/secondaryLightColor">
        <shape>
            <gradient
                android:startColor="@color/secondaryLightColor"
                android:endColor="@color/secondaryColor"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/secondaryLightColor" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
