<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ticTacToeButtons" >
        <item name="backgroundTint">@color/secondaryLightColor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">24dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:shadowDx">3</item>
    </style>

    <style name="statusTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/austin</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>


    <style name="MaterialCardWithBorder" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">@dimen/slim_margin</item>
        <item name="strokeColor">@color/primaryColor</item>
        <item name="cardBackgroundColor">@color/DefaultBackgroundColor</item>
    </style>

    <style name="BoarderlessButton13Stones" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline4
        </item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:onClick">"pick123"</item>
    </style>


    <style name="TextViewStatistics">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
    </style>

    <style name="TextViewStatistics.PrimaryTextColor">
        <item name="android:textColor">@color/secondaryDarkColor</item>
    </style>

    <style name="TextViewStatistics.PrimaryTextColor.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStatistics.SecondaryTextColor">
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="TextViewStatistics.SecondaryTextColor.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="resetButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/double_activity_margin</item>
        <item name="android:backgroundTint">@color/secondaryDarkColor</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:shadowDx">3</item>
        <item name="android:textColor">@color/secondaryLightColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>